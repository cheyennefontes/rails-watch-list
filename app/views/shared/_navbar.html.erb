          <li class="nav-item dropdown text-light">
          <%= render 'shared/avatar' %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
               <%= link_to "Edit Profile", "/users/edit", class: "dropdown-item" %>
