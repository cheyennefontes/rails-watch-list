<section class="position-relative py-4 py-xl-5">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-sm-5 col-md-6 col-xxl-4">
        <div class="card mb-5">
          <div class="card-body d-flex flex-column align-items-center">
            <h2>Editar perfil de <%= current_user.nickname %></h2>
            <br/>
            <%= cl_image_tag @user.photo.key, :width=>150, :height=>150, :gravity=>"face", :crop=>"fill", :radius=>"max" if @user.photo.attached? %>
            <br/>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
               <h5 class="text-center"><%= current_user.email %></h5>
               <br/>
               <%= f.input :photo, label:"Foto", as: :file %>
                <%= f.input :password, label:"Nova senha",
                                  hint: "deixe em branco se não quiser alterar",
                                  required: false,
                                  input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation, label:"Confirme sua nova Senha",
                                  required: false,
                                  input_html: { autocomplete: "new-password" } %>
                <%= f.input :current_password, label:"Senha atual",
                                  hint: "precisamos de sua senha atual para confirmar suas alterações",
                                  required: true,
                                  input_html: { autocomplete: "current-password" } %>

              </div>
              <div class="form-actions">
                <%= f.button :submit, "Atualizar", class:'btn btn-dark d-block w-100' %>
              </div>
            <% end %>
            <br/>
            <%= link_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
            <br/>
            <%= link_to "Voltar", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
