<div class="banner">
  <div class="text-banner px-4 py-4">
    <% if current_user%>
      <h3 class="fw-bold fs-1">Bem Vindo(a) <%= current_user.nickname %>
      <%else%>
        <h3 class="fw-bold fs-1">Bem vindo(a) ao MyMovies!</h3>
      <%end%>
    </div>
       <%= form_with url: lists_path,
                        method: :get,
                        class: "d-flex",
                        data: {turbo_frame: 'search', controller: 'search'} do |f| %>
            <%= f.text_field :query,
                            value: params[:query],
                            class: "form-control mx-4 my-5",
                            type: "search",
                            placeholder: "Buscar listas...",
                            label: "Search",
                            data: {action: 'keyup->search#perform'} %>
          <% end %>
  </div>
</div>
